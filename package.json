{
  "name": "txt-forge",
  "version": "1.3.8",
  "description": "Turn any code folder into AI-ready text files instantly.",
  "type": "module",
  "bin": {
    "txt-forge": "./bin/cli.js"
  },
  "files": [
    "build",
    "bin",
    "package.json"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "gpt",
    "context",
    "codebase",
    "converter"
  ],
  "author": "DavidMGDev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidMGDev/txt-forge.git"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.48.6",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "svelte": "^5.43.13",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "open": "^10.0.0",
    "polka": "^0.5.2",
    "sirv": "^2.0.0"
  }
}
